<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:innerRadiusRatio="2.55"
            android:shape="ring"
            android:thicknessRatio="15"
            android:useLevel="false">
            <solid android:color="#F7F8F8" />
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270" android:toDegrees="270">
            <shape
                android:innerRadiusRatio="2.55"
                android:shape="ring"
                android:thickness="15dp"
                android:useLevel="true">
                <gradient
                    android:endColor="@color/primary_color"
                    android:startColor="@color/secondary_color"
                    android:type="linear" />
            </shape>
        </rotate>
    </item>
    <item android:bottom="125dp">
        <shape
            android:innerRadiusRatio="1000"
            android:shape="ring"
            android:thickness="7dp"
            android:useLevel="false">
           <solid android:color="@color/primary_color"/>
        </shape>
    </item>
    <item>
        <rotate>
            <inset android:insetBottom="125dp">
                <shape
                    android:innerRadiusRatio="1000"
                    android:shape="ring"
                    android:thickness="7dp"
                    android:useLevel="false">
                    <solid android:color="@color/secondary_color" />
                </shape>
            </inset>
        </rotate>
    </item>
</layer-list>